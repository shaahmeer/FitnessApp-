<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Suggestions"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Display area for exercise suggestions -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/exerciseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Exercise suggestions will be dynamically added here -->
        </LinearLayout>
    </ScrollView>

    <!-- Button to generate exercise suggestions -->
    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Exercise Suggestions"
        android:layout_gravity="center"
        android:onClick="generateExerciseSuggestions"/>
</LinearLayout>
